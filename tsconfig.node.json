{
  "extends": "./tsconfig.json", // optional, if you have a base config; otherwise omit or replace with your base config path
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/node", // output dir for node specific builds
    "rootDir": ".", // root can be project root or specific folder
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false, // adjust as per your needs
    "noEmit": false // must allow emit for composite projects
  },
  "include": [
    "."
  ]
}