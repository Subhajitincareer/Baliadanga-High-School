{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["cypress", "node"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "../cypress/**/*.ts",
    "../cypress/**/*.tsx",
    "../src/**/*.cy.ts",
    "../src/**/*.cy.tsx"
  ]
}
